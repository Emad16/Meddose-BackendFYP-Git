<div style="display: flex; flex-direction: column; align-items: center; margin-top: 5rem;">
    <div style="width: 100%;">
        <div style="background-color: #00287a; color: #04b2a9; padding: 2rem; text-align: center; border: 1px solid #04b2a9; border-radius:  20px;">
            <h1 style="color: #fff;">
                Reset Password
            </h1>
            <%- include ("./messages") %>
            <form action="/api/auth/reset/<%= id %>"  method="POST" style="display: flex; flex-direction: column;">
                <div style="margin-bottom: 1rem; display: flex;
                flex-direction: column;
                text-align: left;">
                    <label for="password" style="color: #fff; font-size: 20px;">Password</label>
                    <input type="password" id="password" name="password" style="width: 100%; padding: 1rem; border: 1px solid #04b2a9; border-radius: 20px;" placeholder="Enter Password"
                      value="<%= typeof password != 'undefined' ? password : '' %>" />
                </div>
                <div style="margin-bottom: 1rem; display: flex;
                flex-direction: column;
                text-align: left;">
                    <label for="password2" style="color: #fff; font-size: 20px">Confirm Password</label>
                    <input type="password" id="password2" name="password2" style="width: 100%; padding: 1rem; border: 1px solid #04b2a9; border-radius: 20px" placeholder="Confirm Password"
                      value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                </div>
                <button type="submit" style="background-color: #04b2a9; color: #fff; border: none; padding: 1rem; cursor: pointer; width: 100%; border-radius: 20px; margin-top: 10px; font-size: 20px">Reset Password</button>
            </form>
        </div>
    </div>
</div>
